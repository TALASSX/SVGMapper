<UserControl x:Class="SVGMapper.Views.InspectorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:models="clr-namespace:SVGMapper.Models"
             xmlns:conv="clr-namespace:SVGMapper.Converters"
             Width="280">
    <UserControl.Resources>
        <conv:HexColorConverter x:Key="HexColorConverter" />
    </UserControl.Resources>
    <Border BorderBrush="#DDD" BorderThickness="1" Background="#FAFAFA">
        <StackPanel Margin="10">
            <TextBlock Text="Inspector" FontWeight="Bold" FontSize="14"/>

            <ContentControl Content="{Binding SelectedItem}" Margin="0,8,0,0">
                <ContentControl.Resources>
                    <DataTemplate DataType="{x:Type models:Seat}">
                        <StackPanel>
                            <TextBlock Text="Seat" FontWeight="SemiBold"/>

                            <StackPanel Orientation="Horizontal" Margin="0,8">
                                <TextBlock Width="90" VerticalAlignment="Center" Text="Seat Number:"/>
                                <TextBox Text="{Binding SeatNumber, UpdateSourceTrigger=PropertyChanged}" Width="150"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,4">
                                <TextBlock Width="90" VerticalAlignment="Center" Text="Row:"/>
                                <TextBox Text="{Binding Row, UpdateSourceTrigger=PropertyChanged}" Width="150"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,4">
                                <TextBlock Width="90" VerticalAlignment="Center" Text="Color:"/>
                                <TextBox Text="{Binding Color, Converter={StaticResource HexColorConverter}, UpdateSourceTrigger=PropertyChanged}" Width="120"/>
                                <TextBlock Width="8"/>
                                <TextBlock Width="40" VerticalAlignment="Center" Text="Size:"/>
                                <TextBox Text="{Binding Size, UpdateSourceTrigger=PropertyChanged}" Width="60"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,4">
                                <TextBlock Width="90" VerticalAlignment="Center" Text="X:"/>
                                <TextBlock Text="{Binding Position.X}" Width="60"/>
                                <TextBlock Width="10"/>
                                <TextBlock Text="Y:"/>
                                <TextBlock Text="{Binding Position.Y}" Width="60"/>
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>

                    <DataTemplate DataType="{x:Type models:Room}">
                        <StackPanel>
                            <TextBlock Text="Room" FontWeight="SemiBold"/>

                            <StackPanel Orientation="Horizontal" Margin="0,8">
                                <TextBlock Width="90" VerticalAlignment="Center" Text="Name:"/>
                                <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Width="160"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,4">
                                <TextBlock Width="90" VerticalAlignment="Center" Text="Stroke:"/>
                                <TextBox Text="{Binding StrokeColor, Converter={StaticResource HexColorConverter}, UpdateSourceTrigger=PropertyChanged}" Width="90"/>
                                <TextBlock Width="8"/>
                                <TextBlock VerticalAlignment="Center" Text="Fill:"/>
                                <TextBox Text="{Binding FillColor, Converter={StaticResource HexColorConverter}, UpdateSourceTrigger=PropertyChanged}" Width="90"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,4">
                                <TextBlock Width="90" VerticalAlignment="Center" Text="Opacity:"/>
                                <Slider Minimum="0" Maximum="1" Value="{Binding Opacity, UpdateSourceTrigger=PropertyChanged}" Width="160" SmallChange="0.01"/>
                            </StackPanel>

                            <TextBlock Text="Points:" FontSize="12" FontWeight="SemiBold" Margin="0,6,0,0"/>
                            <ItemsControl ItemsSource="{Binding Points}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" Margin="0,2">
                                            <TextBlock Text="X:" Width="14"/>
                                            <TextBlock Text="{Binding X}" Width="60"/>
                                            <TextBlock Text="Y:" Width="14"/>
                                            <TextBlock Text="{Binding Y}" Width="60"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </DataTemplate>
                </ContentControl.Resources>
            </ContentControl>

            <TextBlock Text="(Select an object on the canvas to edit its properties)" FontStyle="Italic" FontSize="11" Margin="0,12,0,0"/>
        </StackPanel>
    </Border>
</UserControl>