<UserControl x:Class="SVGMapper.Minimal.Controls.RoomOverlayControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             Width="120" Height="60">
    <Grid>
        <Border x:Name="MainBorder"
                Background="#EEDDB377"
                BorderBrush="Orange"
                BorderThickness="3"
                CornerRadius="2" />

        <TextBlock x:Name="LabelText" Text="Room"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   FontWeight="Bold" />

        <!-- Resize handles -->
        <Rectangle x:Name="TopLeft"    Width="10" Height="10" Fill="White" Stroke="Black"
                   HorizontalAlignment="Left" VerticalAlignment="Top"
                   Cursor="SizeNWSE" Visibility="Visible" />

        <Rectangle x:Name="TopRight"   Width="10" Height="10" Fill="White" Stroke="Black"
                   HorizontalAlignment="Right" VerticalAlignment="Top"
                   Cursor="SizeNESW" Visibility="Visible" />

        <Rectangle x:Name="BottomLeft" Width="10" Height="10" Fill="White" Stroke="Black"
                   HorizontalAlignment="Left" VerticalAlignment="Bottom"
                   Cursor="SizeNESW" Visibility="Visible" />

        <Rectangle x:Name="BottomRight" Width="10" Height="10" Fill="White" Stroke="Black"
                   HorizontalAlignment="Right" VerticalAlignment="Bottom"
                   Cursor="SizeNWSE" Visibility="Visible" />

        <!-- Side handles -->
        <Rectangle x:Name="Left" Width="8" Height="16" Fill="White" Stroke="Black"
                   HorizontalAlignment="Left" VerticalAlignment="Center" Cursor="SizeWE" Visibility="Visible" />
        <Rectangle x:Name="Right" Width="8" Height="16" Fill="White" Stroke="Black"
                   HorizontalAlignment="Right" VerticalAlignment="Center" Cursor="SizeWE" Visibility="Visible" />
        <Rectangle x:Name="Top" Width="16" Height="8" Fill="White" Stroke="Black"
                   HorizontalAlignment="Center" VerticalAlignment="Top" Cursor="SizeNS" Visibility="Visible" />
        <Rectangle x:Name="Bottom" Width="16" Height="8" Fill="White" Stroke="Black"
                   HorizontalAlignment="Center" VerticalAlignment="Bottom" Cursor="SizeNS" Visibility="Visible" />
    </Grid>
</UserControl>