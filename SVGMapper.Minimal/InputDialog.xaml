<Window x:Class="SVGMapper.Minimal.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Input" WindowStartupLocation="CenterOwner" Height="140" Width="320" ResizeMode="NoResize">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock x:Name="PromptText" Text="Prompt" />
        <TextBox x:Name="ResponseBox" Grid.Row="1" Margin="0,8,0,8" />
        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Right">
            <Button Content="OK" Width="80" Margin="4" Click="Ok_Click" />
            <Button Content="Cancel" Width="80" Margin="4" Click="Cancel_Click" />
        </StackPanel>
    </Grid>
</Window>