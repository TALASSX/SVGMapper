<Window x:Class="SVGMapper.Minimal.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:SVGMapper.Minimal.ViewModels"
        xmlns:models="clr-namespace:SVGMapper.Minimal.Models"
        xmlns:conv="clr-namespace:SVGMapper.Minimal.Converters"
        Title="SVGMapper Minimal" Height="700" Width="1100">
    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>
    <Window.Resources>
        <conv:PointsToPointCollectionConverter x:Key="PtsToPC" />
        <DataTemplate DataType="{x:Type models:PolygonRoom}">
            <StackPanel Margin="6">
                <TextBlock FontWeight="Bold" Text="Room Details" Margin="0,0,0,6" />
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="#" FontWeight="Bold" />
                    <TextBlock Text=" " />
                    <TextBlock Text="{Binding DataContext.SelectedRoomNumber, RelativeSource={RelativeSource AncestorType=Window}}" />
                </StackPanel>
                <TextBlock Text="Name:" FontWeight="Bold" Margin="0,6,0,0" />
                <TextBlock Text="{Binding Name}" />
                <TextBlock Text="Field Number:" FontWeight="Bold" Margin="0,6,0,0" />
                <TextBox Text="{Binding FieldNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="160" />
                <TextBlock Text="Points:" FontWeight="Bold" Margin="0,6,0,0" />
                <TextBlock Text="{Binding Points.Count}" />
                <TextBlock Text="Id:" FontWeight="Bold" Margin="0,6,0,0" />
                <TextBlock Text="{Binding Id}" TextWrapping="Wrap" />
            </StackPanel>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="180" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="260" />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" Margin="6">
            <TextBlock FontWeight="Bold" Text="Tools" Margin="0,0,0,6" />
            <Button Content="Draw Polygon" Command="{Binding PolygonToolCommand}" Margin="0,2" />
            <Button Content="Delete Selected" Command="{Binding DeleteRoomCommand}" Margin="0,8" />
                <Button Content="Import Image" Command="{Binding ImportImageCommand}" Margin="0,8" />
            <!-- Delete via context menu on rooms -->
            <Button Content="Undo" Margin="0,2" Click="UndoButton_Click" />
            <!-- Undo Point removed per request -->
            <Separator Margin="0,8" />
            <CheckBox Content="Show Grid" IsChecked="{Binding GridVisible}" />
            <StackPanel Orientation="Horizontal" Margin="0,6">
                <TextBlock Text="Grid:" VerticalAlignment="Center" Margin="0,0,6,0" />
                <TextBox Width="60" Text="{Binding GridSize, Mode=TwoWay}" />
            </StackPanel>
            <Separator Margin="0,8" />
            <Button Content="Export SVG" Command="{Binding ExportCommand}" />

            <!-- Rooms list moved to the right inspector panel -->
        </StackPanel>

        <Border Grid.Column="1" Background="#FFF" BorderBrush="#DDD" BorderThickness="1" Margin="6">
            <ScrollViewer x:Name="MainScrollViewer" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" CanContentScroll="False"
                          PreviewMouseWheel="MainScrollViewer_PreviewMouseWheel"
                          PreviewMouseDown="MainScrollViewer_PreviewMouseDown"
                          PreviewMouseMove="MainScrollViewer_PreviewMouseMove"
                          PreviewMouseUp="MainScrollViewer_PreviewMouseUp">
                <Canvas x:Name="MainCanvas" Background="White" Width="{Binding CanvasWidth}" Height="{Binding CanvasHeight}"
                        MouseLeftButtonDown="Canvas_MouseLeftButtonDown"
                        MouseMove="Canvas_MouseMove"
                        MouseLeftButtonUp="Canvas_MouseLeftButtonUp">
                    <Canvas.RenderTransform>
                        <ScaleTransform x:Name="MainCanvasScale" ScaleX="1" ScaleY="1" />
                    </Canvas.RenderTransform>
                    <!-- Parent Grid that holds the Image and the pixel-sized overlay Canvas -->
                    <Grid Canvas.Left="0" Canvas.Top="0" Width="{Binding CanvasWidth}" Height="{Binding CanvasHeight}">
                        <Image x:Name="BgImage" Source="{Binding BackgroundImageSource}" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center" />
                        <Canvas x:Name="ImageOverlay" Width="{Binding ActualWidth, ElementName=BgImage}" Height="{Binding ActualHeight, ElementName=BgImage}" IsHitTestVisible="False" HorizontalAlignment="Center" VerticalAlignment="Center" />
                        <Canvas x:Name="GridOverlay" Width="{Binding ActualWidth, ElementName=BgImage}" Height="{Binding ActualHeight, ElementName=BgImage}" IsHitTestVisible="False" HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Grid>

                    <!-- programmatic grid rendered by code-behind -->
                    <!-- Remove ItemsControl for Rooms: polygons will be drawn in code-behind for perfect alignment -->

                </Canvas>
            </ScrollViewer>
        </Border>

        <Border Grid.Column="2" Background="#F8F8F8" BorderBrush="#DDD" BorderThickness="1" Margin="6">
            <StackPanel Margin="6">
                <TextBlock FontWeight="Bold" Text="Inspector" Margin="0,0,0,8" />
                <TextBlock FontWeight="Bold" Text="Rooms" Margin="0,6,0,6" />
                <ListBox x:Name="RoomsList" ItemsSource="{Binding Rooms}" SelectedItem="{Binding SelectedRoom, Mode=TwoWay}" DisplayMemberPath="Name" Height="200" Margin="0,0,0,6" MouseDoubleClick="RoomsList_MouseDoubleClick">
                    <ListBox.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Delete" Click="RoomsList_Delete_Click" />
                            <MenuItem Header="Rename" Click="RoomsList_Rename_Click" />
                        </ContextMenu>
                    </ListBox.ContextMenu>
                </ListBox>
                <Separator Margin="0,6" />
                <ContentControl Content="{Binding Selected}" />
            </StackPanel>
        </Border>
    </Grid>
</Window>